<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin id="com.outsystems.plugins.healthfitness" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>HealthFitness</name>
  <description>Health &amp; Fitness cordova plugin for OutSystems applications.</description>
  <author>OutSystems Inc</author>
  <js-module name="HealthFitness" src="www/HealthFitness.js">
    <clobbers target="cordova.plugins.HealthFitness"/>
  </js-module>
  <platform name="android">

    <config-file parent="/*" target="res/xml/config.xml">

      <feature name="OSHealthFitness">
        <param name="android-package" value="com.outsystems.plugins.healthfitness.OSHealthFitness"/>
      </feature> 

      <preference name="GradlePluginKotlinEnabled" value="true" />
      <preference name="GradlePluginKotlinCodeStyle" value="official" />
      <preference name="GradlePluginKotlinVersion" value="1.3.50" />
      <preference name="AndroidXEnabled" value="true"/>

      <service
              android:name="com.outsystems.plugins.healthfitness.MyDataUpdateService"
              android:exported="true"/>
  
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml">
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
      <uses-permission android:name="android.permission.BODY_SENSORS" />
    </config-file>
    
    <source-file src="src/android/com/outsystems/plugins/healthfitness/HealthFitness.kt" target-dir="app/src/main/kotlin/com/outsystems/plugins/healthfitness"/>
    <source-file src="src/android/com/outsystems/plugins/healthfitness/MyDataUpdateService.kt" target-dir="app/src/main/kotlin/com/outsystems/plugins/healthfitness"/>

    <framework src="src/android/build.gradle" custom="true" type="gradleReference" />
    <framework src="org.jetbrains.kotlinx:kotlinx-coroutines-core-jvm:1.4.3" />
    <framework src="org.jetbrains.kotlinx:kotlinx-coroutines-android:1.4.3" />

  </platform>
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="HealthFitness">
        <param name="ios-package" value="HealthFitness"/>
      </feature>
    </config-file>
    <source-file src="src/ios/HealthFitness.m"/>
    <header-file src="src/ios/HealthFitness.h"/>
  </platform>

</plugin>